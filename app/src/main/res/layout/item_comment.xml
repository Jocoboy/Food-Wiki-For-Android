<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:stretchColumns="0,1"
    android:descendantFocusability="blocksDescendants">

    <TableRow android:layout_width="232dp"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_bloger"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/img_figure_default"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                tools:ignore="ContentDescription">
            </ImageView>


            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="24sp">

                <LinearLayout
                    android:id="@+id/ll_bloger"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="半杯咖啡享一世"
                        android:textColor="#DD4477"
                        android:textSize="12sp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="0dp">
                    </TextView>

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="对我的文章发表了评论"
                        android:textColor="#615658"
                        android:textSize="10sp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="0dp">
                    </TextView>
                </LinearLayout>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textAlignment="textStart"

                    android:text="请问这个糖醋排骨分量大么？性价比如何？">

                </TextView>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="2021年2月9日 13:51"
                        android:layout_marginTop="6dp"
                        android:textSize="8sp">

                    </TextView>

                    <ImageButton
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/ic_reply">

                    </ImageButton>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="4sp"
                        android:text="回复"
                        android:textSize="12sp">

                    </TextView>
                </LinearLayout>


            </LinearLayout>



            <ImageView
                android:id="@+id/iv_whichfood"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/img_food_tangcupaigu"
                tools:ignore="ContentDescription">
            </ImageView>

        </LinearLayout>


    </TableRow>

</TableLayout>