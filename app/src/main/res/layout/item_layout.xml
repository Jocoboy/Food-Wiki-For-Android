<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:stretchColumns="0,1"
    android:descendantFocusability="blocksDescendants">

    <TableRow android:layout_width="232dp"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/iv_food"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:src="@drawable/img_food_tangcupaigu"
            tools:ignore="ContentDescription">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="糖醋排骨"
                android:textColor="@color/black_transparent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textAlignment="center">
            </TextView>


            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='"酸甜适中，不油不腻，口感丰富细腻，不会觉得任何一种调料的突兀。颜色呈糖稀色，不浓不淡。就是拿汁水拌米饭也是一样好吃。"'
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bloger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:text="来自博主"
                    android:textSize="10sp"
                    android:layout_marginStart="56dp"
                    android:layout_marginEnd="10dp"
                    android:textAlignment="center">
                </TextView>

                <TextView
                    android:id="@+id/tv_bloger"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="半杯咖啡享一世"
                    android:textSize="10sp"
                    android:textColor="@color/design_default_color_error"
                    android:textAlignment="center">
                </TextView>


                <TextView
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="的点评 "
                    android:textSize="10sp"
                    android:textAlignment="center">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_phonenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:text="联系电话"
                    android:textSize="10sp"
                    android:layout_marginStart="56dp"
                    android:layout_marginEnd="10dp"
                    android:textAlignment="center">
                </TextView>

                <TextView
                    android:id="@+id/tv_phonenumber"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="123456789"
                    android:textSize="10sp"
                    android:textColor="@color/design_default_color_error"
                    android:textAlignment="center">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_like"
                    tools:ignore="ContentDescription"
                    android:layout_marginStart="56dp">
                </ImageView>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="20">

                </TextView>

                <ImageView
                    android:id="@+id/iv_star"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_star"
                    tools:ignore="ContentDescription">
                </ImageView>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="20">

                </TextView>

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_share"
                    tools:ignore="ContentDescription">
                </ImageView>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="20">

                </TextView>
            </LinearLayout>
        </LinearLayout>
    </TableRow>

</TableLayout>