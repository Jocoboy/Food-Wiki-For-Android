<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:stretchColumns="0,1"
    android:descendantFocusability="blocksDescendants">

    <TableRow android:layout_width="232dp"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_bloger"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:src="@drawable/img_figure_boy"
                tools:ignore="ContentDescription">
            </ImageView>

            <LinearLayout
                android:id="@+id/ll_bloger"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="半杯咖啡享一世"
                    android:textColor="#DD4477"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textAlignment="textStart"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginRight="0dp">
                </TextView>

                <TextView
                    android:id="@+id/tv_description_bloger"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="这个人很懒，什么都没写..."
                    android:textColor="#53424A"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textAlignment="textStart"
                    android:layout_marginStart="10dp"
                    android:layout_marginRight="0dp">
                </TextView>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_follow"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cb_remember_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:button="@drawable/selector_follow_checkbox"
                    android:checked="true"
                    android:text="取消关注"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/hint_text" />
            </LinearLayout>
        </LinearLayout>

    </TableRow>

</TableLayout>